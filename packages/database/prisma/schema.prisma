// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Usu√°rios
model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  imageUrl String?
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  img         String
  description String
  collection  String
  link        String
  album       Json?    @db.Json
  size        Json?    @db.Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
